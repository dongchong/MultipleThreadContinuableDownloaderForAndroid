<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dongdong.multiplethreadcontinuabledownloaderforandroid" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_theme"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".FirstMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".SelectFile"></activity>
        <activity android:name=".Music_Video"></activity>
        <activity android:name=".DianboVideo"></activity>
        <activity android:name=".DianboMusic"></activity>
    </application>
    <!--访问Internet的权限-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 在SDCard中创建与删除文件的权限-->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!--往SDCard写入数据的权限-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!--设置读取外部存储器文件的权限-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
</manifest>
